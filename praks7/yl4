
#!/bin/bash
#
# yl3
echo -n "Sisestage kellaaeg:"
read aeg

if [ $aeg -ge 6 -a $aeg -le 12 ] #Kell 6-12
then
	echo "Tere hommikust $USER!"
elif [ $aeg -ge 12 -a $aeg -le 18 ] #Kell 12-18
then
	echo "Tere päevast $USER!"
elif [ $aeg -ge 18 -a $aeg -le 22 ] #Kell 18-22
then
	echo "Tere õhtust $USER!"
elif [ $aeg -ge 23 -a $aeg -le 24 ] #Kell 22-24
then
	echo "Head ööd $USER!"
elif [ $aeg -ge 0 -a $aeg -le 5 ]
then
	echo "Head ööd $USER!"
fi
#
# lõpp
